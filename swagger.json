{
    "swagger": "2.0",
    "info": {
        "title": "Accross The World API Documentation",
        "description": "API для управления проектом Accross The World",
        "version": "1.0",
        "host": "localhost:8000"
    },
    "tags": [
        {
            "name": "Regions",
            "description": "Управление регионами"
        },
        {
            "name": "Reviews",
            "description": "Управление отзывами"
        },
        {
            "name": "Blogs",
            "description": "Управление блогами"
        },
        {
            "name": "Tours",
            "description": "Управление турами"
        }
    ],
    "paths": {
        "/tours": {
            "get": {
                "tags": [
                    "Tours"
                ],
                "description": "Получение списка туров с фильтрацией и сортировкой",
                "parameters": [
                    {
                        "name": "sort",
                        "in": "query",
                        "required": false,
                        "type": "string",
                        "description": "Сортировка (JSON)"
                    },
                    {
                        "name": "filter",
                        "in": "query",
                        "required": false,
                        "type": "string",
                        "description": "Фильтрация (JSON)"
                    },
                    {
                        "name": "admin",
                        "in": "query",
                        "required": false,
                        "type": "string",
                        "default": "false",
                        "description": "Фильтр для отображения всех туров (true - все, false - только опубликованные)"
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "required": false,
                        "type": "integer",
                        "default": 10,
                        "description": "Количество туров на странице"
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "type": "integer",
                        "default": 1,
                        "description": "Номер страницы"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Список туров",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Tour"
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Tours"
                ],
                "description": "Добавление нового тура",
                "parameters": [
                    {
                        "name": "TourData",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Tour"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Тур успешно добавлен",
                        "schema": {
                            "$ref": "#/definitions/Tour"
                        }
                    }
                }
            }
        },
        "/tours/{id}": {
            "get": {
                "tags": [
                    "Tours"
                ],
                "description": "Получение конкретного тура",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string",
                        "description": "ID тура"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Данные тура",
                        "schema": {
                            "$ref": "#/definitions/Tour"
                        }
                    },
                    "404": {
                        "description": "Тур не найден"
                    }
                }
            },
            "put": {
                "tags": [
                    "Tours"
                ],
                "description": "Редактирование тура",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string",
                        "description": "ID тура"
                    },
                    {
                        "name": "TourData",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Tour"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Тур успешно обновлен",
                        "schema": {
                            "$ref": "#/definitions/Tour"
                        }
                    },
                    "404": {
                        "description": "Тур не найден"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Tours"
                ],
                "description": "Удаление тура",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string",
                        "description": "ID тура"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Тур успешно удален"
                    },
                    "404": {
                        "description": "Тур не найден"
                    }
                }
            }
        },
        "/tours/{id}/details": {
            "patch": {
                "tags": [
                    "Tours"
                ],
                "description": "Обновление деталей тура (даты, статус публикации)",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string",
                        "description": "ID тура"
                    },
                    {
                        "name": "TourDetails",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "dates": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "isPublished": {
                                    "type": "boolean"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Детали тура успешно обновлены",
                        "schema": {
                            "$ref": "#/definitions/Tour"
                        }
                    },
                    "404": {
                        "description": "Тур не найден"
                    }
                }
            }
        }
    },
    "definitions": {
        "Region": {
            "required": [
                "direction",
                "region"
            ],
            "properties": {
                "direction": {
                    "type": "string",
                    "enum": [
                        "Россия",
                        "Заграница"
                    ],
                    "description": "Направление региона"
                },
                "region": {
                    "type": "string",
                    "description": "Название региона"
                }
            }
        },
        "Review": {
            "required": [
                "name",
                "city",
                "feedback",
                "tourId"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "city": {
                    "type": "string"
                },
                "feedback": {
                    "type": "string"
                },
                "tourId": {
                    "type": "string"
                },
                "isModeration": {
                    "type": "boolean"
                },
                "createdAt": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "Blog": {
            "required": [
                "title",
                "description"
            ],
            "properties": {
                "title": {
                    "type": "string",
                    "description": "Заголовок блога"
                },
                "description": {
                    "type": "string",
                    "description": "Описание блога"
                },
                "photos": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "_id": {
                                "type": "string"
                            },
                            "src": {
                                "type": "string",
                                "description": "URL изображения"
                            }
                        }
                    }
                },
                "createdAt": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "Tour": {
            "required": [
                "tour",
                "dates",
                "locations",
                "details",
                "image",
                "direction",
                "region",
                "country",
                "description",
                "program"
            ],
            "properties": {
                "tour": {
                    "type": "string",
                    "description": "Название тура"
                },
                "dates": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Даты проведения тура"
                },
                "locations": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Локации тура"
                },
                "details": {
                    "type": "object",
                    "description": "Детали тура"
                },
                "image": {
                    "type": "string",
                    "description": "Ссылка на изображение"
                },
                "direction": {
                    "type": "string",
                    "description": "Направление"
                },
                "region": {
                    "type": "string",
                    "description": "Регион"
                },
                "country": {
                    "type": "string",
                    "description": "Страна"
                },
                "description": {
                    "type": "string",
                    "description": "Описание тура"
                },
                "program": {
                    "type": "string",
                    "description": "Программа тура"
                },
                "isPublished": {
                    "type": "boolean",
                    "description": "Опубликован ли тур"
                }
            }
        }
    }
}